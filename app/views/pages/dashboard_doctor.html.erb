<%= render "shared/navbar_doc" %>
<div class="container p-2">
  <div class="profile">
    <h2>Bienvenido al dashboard de doctores</h2>

    <p>Nombre: <%= @doctor.first_name %></p>
    <p>Apellido: <%= @doctor.last_name %></p>
    <p>Celular: <%= @doctor.phone_number %></p>
    <p>Profesion: <%= @doctor.profession %></p>
    <p>Pais: <%= @doctor.location %></p>
    <%= link_to "Cambiar información", edit_doctor_registration_path, class: "button" %>
  </div>

  <h3>Mis pacientes</h3>
  <% if @doctor.patients.any? %>
    <ul>
      <% @doctor.patients.each do |patient| %>
        <li>
          <%= link_to patient.first_name, shared_path(id: patient.id, token: patient.token) %>
          <% relation = @doctor.relations.find_by(patient: patient) %>
          <% if relation %>
            - Status: <%= relation.status.capitalize %>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>No tienes pacientes aún.</p>
  <% end %>

  <div class="contents">
    <h3>Mis contenidos</h3>
    <ul>
      <% @contents.each do |content| %>
        <li>
          <%= link_to content.title, content_path(content) %>
        </li>
      <% end %>
    </ul>
  <%= link_to "Crear contenido", new_content_path, class: "button" %>
</div>
