<div class="container-fluid">
  <div class="row">
    <div class="col-12 col-md-6 col-lg-6">

      <% #patient card information %>
      <div class="card patient-report mt-4">
        <div class="card-body">
          <h4 class="card-title" style="margin-bottom: 20px;"><%= @patient.first_name %> <%= @patient.last_name %></h4>
          <p class="card-text" style="line-height: 1.0;"><strong>Fecha de nacimiento:</strong> <%= @patient.date_birth %></p>
          <p class="card-text" style="line-height: 1.0;"><strong>NÃºmero de telefono:</strong> <%= @patient.phone_number %></p>
          <p class="card-text" style="line-height: 1.0;"><strong>Correo:</strong> <%= @patient.email %></p>
          <p class="card-text" style="line-height: 1.0;"><strong>PaÃ­s:</strong> <%= @patient.location %></p>
        </div>
      </div>
    </div>

    <% #medicines card information %>
    <div class="col-12 col-md-6">
      <div class="card medicine-report mt-4">
        <div class="card-body scrollable-card-body">
          <h4> ðŸ’Š Medicinas: </h4>
          <% @patient.medicines.each do |medicine| %>
            <p style="margin-top: 0; margin-bottom: 0;">Nombre: <strong><%= medicine.name %></strong> - Dosis: <strong><%= medicine.dosage %></strong> - Frecuencia: <strong><%= medicine.times_a_day %></strong></p>
            <p style="margin-top: 0; margin-bottom: 0;">Del <%= medicine.start_date %> al <%= medicine.end_date %></p>
            <p style="margin-top: 0; margin-bottom: 0;">Recomendado por: <%= medicine.recommended_by %></p>
            <hr style="margin-top: 5px; margin-bottom: 5px;">
          <% end %>
        </div>
      </div>
    </div>
  </div>


<div class="row">
  <div class="col-12 col-md-6 col-lg-6">
    <% #my recommendations card information %>
      <div class="card recommendation-report mt-3">
        <div class="card-body scrollable-card-2">
          <% if current_user.is_a?(Doctor) %>
            <div class="d-flex justify-content-between align-items-center flex-wrap">
              <h4> ðŸ‘‰ Mis recomendaciones</h4>
              <%= link_to '<i class="fa-solid fa-plus"></i>'.html_safe, new_doctor_report_recommendation_path(current_doctor, @report), class: "btn btn-outline-success rounded-pill ms-2", style: "padding-top: 2px; padding-bottom: 2px;" %>
            </div>
              <% if @recommendation.present? %>
                <% @recommendations.each do |recommendation| %>
                  <h5 style="margin-bottom: 0;"><%= recommendation.title %></h5>
                  <p style="margin-top: 0; margin-bottom: 0;"><%= recommendation.comments %></p>
                  <% if recommendation.link_content.present? %>
                    <%= link_to 'Liga ->', recommendation.link_content, style: "margin-top: 0; margin-bottom: 0;" %>
                  <% end %>
                  <div class="d-flex justify-content-end flex-wrap">
                    <%= link_to '<i class="fa-solid fa-trash"></i>'.html_safe, recommendation_path(recommendation), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-sm btn-outline-danger rounded-pill ms-2", style: "padding-top: 1px; padding-bottom: 1px; margin-top: 0;" %>
                    <%= link_to '<i class="fa-solid fa-pen"></i>'.html_safe, edit_recommendation_path(recommendation), class: "btn btn-sm btn-outline-primary rounded-pill ms-2", style: "padding-top: 1px; padding-bottom: 1px;" %>
                  </div>
                <% end %>
              <% else %>
                <p>No hay recomendaciones.</p>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>


    <% #recommendations from other doctors card information %>
    <div class="col-12 col-md-6 col-lg-6">
      <div class="card recommendation-report mt-3">
        <div class="card-body scrollable-card-2">
          <h4> ðŸ‘‰ Recomendaciones de otros profesionales:</h4>
          <% @patient.doctors.where.not(id: current_doctor.id).each do |doctor| %>
            <h5 style="margin-top: 0; margin-bottom: 0;">Doctor: <%= doctor.first_name %> <%= doctor.last_name %></h5>
            <% doctor.recommendations.where(patient: @patient).each do |recommendation| %>
              <p style="margin-top: 0; margin-bottom: 0;"><%= recommendation.title %></p>
              <p style="margin-top: 0; margin-bottom: 0;"><%= recommendation.comments %></p>
              <% if recommendation.link_content.present? %>
                <%= link_to 'Liga ->', recommendation.link_content, style: "margin-top: 0; margin-bottom: 0;" %>
              <% end %>
              <hr style="margin-top: 5px; margin-bottom: 5px;">
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>


